doctype html
html
  head
    meta(http-equiv="Content-Type" content="text/html; charset=utf-8")
    title 육군기록정보관리단
    link(rel="shortcut icon" href="/public_img/favicon.ico" type="image/x-icon")
    link(rel='stylesheet', href='/assets/css/bootstrap.min.css')
    link(rel='stylesheet', href='/assets/css/paper-kit.min.css')
    link(rel='stylesheet', href='/public_css/style.css')
  body
    block append_css
    .container
      #main-top
        section
          .main-search-wrap
            a(href='/')
              img(src='/public_img/logo.png', alt='육군디지털 아카이프 로고')
            input#searchText.pl-3.font-weight-bold(type='text', placeholder='검색어를 입력하세요')
          nav.navbar
            ul.navbar-nav.flex-row.mx-auto
              li.nav-item(class=active=='총장결재기록물'?'bg-danger':'')
                a.nav-link(href="/facet/총장결재기록물") 총장결재기록물
              li.nav-item(class=active=='정책기록'?'bg-danger':'')
                a.nav-link(href="/facet/정책기록") 정책기록
              li.nav-item(class=active=='전투기록'?'bg-danger':'')
                a.nav-link(href="/facet/전투기록") 전투기록
              li.nav-item(class=active=='사여단기록'?'bg-danger':'')
                a.nav-link(href="/facet/사여단기록") 사 · 여단기록
              li.nav-item(class=active=='시청각'?'bg-danger':'')
                a.nav-link(href='#') 시청각
              li.nav-item(class=active=='게시판'?'bg-danger':'')
                a.nav-link(href='/board/list/notice') 게시판      
    block content

