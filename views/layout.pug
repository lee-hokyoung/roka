    script.
      $('.dropdown-toggle[data-toggle="collapse"]').on('click', function(e) {
        let target_id = $(this).data('target');
        let target = document.querySelector(target_id);
        if(target.className.indexOf('show') > -1) target.className = 'collapse';
        else target.className = 'collapse show'
        e.stopPropagation();
      });
